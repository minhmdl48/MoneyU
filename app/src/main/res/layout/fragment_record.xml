<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.RecordFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tong hop chi tieu tu: "
            android:layout_marginStart="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/txtDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chon khoang thoi gian"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="16dp" />
        <ImageView
            android:id="@+id/btnDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="date pick"
            android:src="@drawable/ic_edit"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:text="@string/income"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtIncomeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:textColor="@color/green"
            android:text="0đ"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:text="@string/expense" />

        <TextView
            android:id="@+id/txtOutcomeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:paddingBottom="16dp"
            android:text="0đ"
            android:textColor="@color/red"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/parentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />

</LinearLayout>