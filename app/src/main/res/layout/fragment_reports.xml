<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ReportsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_layout"
                android:layout_margin="5dp"
                android:gravity="top">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income and Expenses Report"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/gray"
                    android:textSize="18dp"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/income_expense_barChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_layout"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/gray"
                        android:textSize="18dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/expensesPieChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                    <TextView
                        android:id="@+id/expenseReport_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FULL REPORT"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/gray"
                        android:textSize="16dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_layout"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Incomes"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/gray"
                        android:textSize="18dp"/>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/incomesPieChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                    <TextView
                        android:id="@+id/incomesReport_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FULL REPORT"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/gray"
                        android:textSize="16dp"/>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
